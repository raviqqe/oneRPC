    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@raviqqe/biome-config": "^2.0.16",
    "@raviqqe/tsconfig": "^2.0.1",
    "@rslib/core": "^0.19.0",
    "@types/aws-lambda": "^8.10.152",
    "@vitest/coverage-v8": "^4.0.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.2",
    "vitest": "^4.0.1"
  },
  "engines": {
    "node": ">=25.3.0"
  },
