{
  "name": "onerpc",
  "version": "0.6.6",
  "description": "The RPC library for the serverless and TypeScript era.",
  "repository": "https://github.com/raviqqe/onerpc",
  "license": "MIT",
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">=24.5.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "default": "./dist/middleware.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "default": "./dist/validation.js"
    },
    "./adapter/*": {
      "types": "./dist/adapter/*.d.ts",
      "default": "./dist/adapter/*.js"
    }
  },
  "scripts": {
    "build": "rslib build",
    "build:tsc": "tsc --emitDeclarationOnly",
    "build:doc": "deno doc --unstable-sloppy-imports --unstable-byonm --html --name='âš¡ oneRPC' src/index.ts src/client.ts src/middleware.ts src/validation.ts src/adapter/*.ts",
    "lint": "biome ci",
    "test": "vitest --coverage"
  },
  "dependencies": {
    "@raviqqe/hidash": "^2.0.3",
    "@raviqqe/loscore": "^0.2.12",
    "valibot": "^1.1.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@raviqqe/biome-config": "^2.0.16",
    "@raviqqe/tsconfig": "^2.0.1",
    "@rslib/core": "^0.12.2",
    "@types/aws-lambda": "^8.10.152",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
