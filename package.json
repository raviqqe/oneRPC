{
  "name": "onerpc",
  "version": "0.6.3",
  "description": "The RPC library for the serverless and TypeScript era.",
  "repository": "https://github.com/raviqqe/onerpc",
  "license": "MIT",
  "publishConfig": {
    "provenance": true
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "default": "./dist/middleware.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "default": "./dist/validation.js"
    },
    "./adapter/*": {
      "types": "./dist/adapter/*.d.ts",
      "default": "./dist/adapter/*.js"
    }
  },
  "scripts": {
    "build": "rslib build",
    "build:tsc": "tsc --emitDeclarationOnly",
    "build:doc": "deno doc --unstable-sloppy-imports --unstable-byonm --html --name='âš¡ oneRPC' src/index.ts src/client.ts src/middleware.ts src/validation.ts src/adapter/*.ts",
    "lint": "biome ci",
    "test": "vitest --coverage"
  },
  "dependencies": {
    "@raviqqe/hidash": "^2.0.0",
    "@raviqqe/loscore": "^0.2.0",
    "valibot": "^1.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@raviqqe/biome-config": "^2.0.10",
    "@raviqqe/tsconfig": "^2.0.0",
    "@rslib/core": "^0.11.2",
    "@types/aws-lambda": "^8.10.130",
    "@vitest/coverage-v8": "^3.0.2",
    "typescript": "^5.0.2",
    "vitest": "^3.0.2"
  },
  "workspaces": [
    ".",
    "examples/aws"
  ]
}
